<h1 class="text-4xl font-bold mb-4"><%= @recipe.name %></h1>
<div class="space-y-2 bg-white p-6 rounded shadow-md">
  <p class="text-lg">
    Preparation time:
    <% hours = @recipe.preparation_time / 60 %>
    <% minutes = @recipe.preparation_time % 60 %>
    <%= hours > 0 ? "#{hours} hour#{'s' if hours > 1} " : "" %><%= "#{minutes} minute#{'s' if minutes != 1}" %>
  </p>

  <p class="text-lg">
    Cooking time:
    <% hours = @recipe.cooking_time / 60 %>
    <% minutes = @recipe.cooking_time % 60 %>
    <%= hours > 0 ? "#{hours} hour#{'s' if hours > 1} " : "" %><%= "#{minutes} minute#{'s' if minutes != 1}" %>
  </p>

  <p class="text-lg">
    <% if @recipe.public %>
      Public: <span class="text-green-500">Yes</span>
    <% else %>
      Public: <span class="text-red-500">No</span>
    <% end %>
  </p>
</div>
