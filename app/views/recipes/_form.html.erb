<%= form_with model: recipe do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :preparation_time_in_minutes %><br>
    <%= f.number_field :preparation_time %>
  </div>

  <div class="field">
    <%= f.label :cooking_time_in_minutes %><br>
    <%= f.number_field :cooking_time %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>

  <div class="field">
  <%= f.label :public %><br>
  <%= f.radio_button :public, true %>
  <%= f.label :public, 'Yes' %>
  <%= f.radio_button :public, false %>
  <%= f.label :public, 'No' %>
</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
