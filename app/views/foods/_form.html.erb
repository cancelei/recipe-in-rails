<%= form_with model: food, class: "space-y-4" do |f| %>

  <div class="field space-y-2">
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 p-2 w-full border rounded-md" %>
  </div>

  <div class="field space-y-2">
    <%= f.label :measurement_unit, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :measurement_unit, class: "mt-1 p-2 w-full border rounded-md" %>
  </div>

  <div class="field space-y-2">
    <%= f.label :price, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :price, class: "mt-1 p-2 w-full border rounded-md" %>
  </div>

  <div class="field space-y-2">
    <%= f.label :quantity, class: "block text-sm font-medium text-gray-700" %>
    <%= f.number_field :quantity, class: "mt-1 p-2 w-full border rounded-md" %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "Submit", class: "py-2 px-4 bg-blue-600 text-black rounded-md hover:bg-blue-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>

<% end %>
